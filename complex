#include <iostream>

using namespace std;

class Complex {
private:
   float real;
   float imag;
public:
  Complex(float r=0, float i=0) {
    real = r;
    imag = i;
  }
  ~Complex() {};
  Complex add(Complex &c) {
    Complex result;
    result.real = real + c.real;
    result.imag = imag + c.imag;
    return result;
  }
  Complex operator+(const Complex &c)
  {
     Complex result;
     result.real = real + c.real;
     result.imag = imag + c.imag;
     return result;
   }
   friend ostream &operator<<(ostream&os, Complex &C) 
     os <<< "( " << C.real << " + " << C.imag << "i)"<<  endl;
     return os;
   }
}

int main() {
  Complex C1(3,2);
  Complex C2(2,3);
  Complex C3;
  
  C3 = C1 + C2;
  cout << C3 << endl;
  
